#include <dt-bindings/zmk/modifiers.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

// Configure hold-tap behaviors (optional: using default 200ms tapping term)

&mt {
    flavor = "tap-preferred";
    tapping-term-ms = <165>;
};   // Mod-tap (for home row mods)
&lt { tapping_term_ms = <200>; };   // Layer-tap (for layer keys)
/ {
    behaviors {
        next_prev: next_prev {
            compatible = "zmk,behavior-tap-dance";
            label = "NEXT_PREV";
            #binding-cells = <0>;
            bindings = <&kp C_NEXT>, <&kp C_PREV>;

            tapping-term-ms = <150>;
        };

        slowlayer: slowlayer {
            compatible = "zmk,behavior-hold-tap";
            label = "SLOWLAYER";
            #binding-cells = <2>;
            bindings = <&to>, <&kp>;

            tapping-term-ms = <500>;
            flavor = "tap-preferred";
        };

        td_excla_minus: td_excla_minus {
            compatible = "zmk,behavior-tap-dance";
            label = "TD_EXCLA_MINUS";
            #binding-cells = <0>;
            bindings =
                <&mt LA(NUMBER_1) EXCLAMATION>,
                <&mt LA(LS(SLASH)) QUESTION>;

            tapping-term-ms = <220>;
        };

        mt_300: mt_300 {
            compatible = "zmk,behavior-hold-tap";
            label = "MT_300";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    macros {
        ale_email: ale_email {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp L &kp E &kp J &kp A &kp N &kp D &kp R &kp O &kp W &kp U &kp N &kp D &kp E &kp R &kp L &kp I &kp C &kp H &kp AT &kp G &kp M &kp A &kp I &kp L &kp DOT &kp C &kp O &kp M>;
            label = "ALE_EMAIL";
        };

        pewu_email: pewu_email {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp P &kp E &kp W &kp U &kp AT &kp H &kp E &kp Y &kp DOT &kp C &kp O &kp M>;
            label = "PEWU_EMAIL";
        };

        macro_to_cmd: macro_to_cmd {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&to 5>,
                <&macro_press>,
                <&kp LEFT_COMMAND>,
                <&macro_tap>,
                <&kp TAB>;

            label = "MACRO_TO_CMD";
        };

        command_up: macro_release {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_release>,
                <&kp LEFT_COMMAND>,
                <&macro_tap>,
                <&to 0>;

            label = "MACRO_RELEASE";
        };

        triple_excla: triple_excla {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp EXCL &kp EXCL &kp EXCL>;
            label = "TRIPLE_EXCLA";
        };

        macro_esc_release: macro_esc_release {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_release>,
                <&kp LEFT_COMMAND>,
                <&macro_tap>,
                <&kp ESCAPE &to 0>;

            label = "MACRO_ESC_RELEASE";
        };

        macro_rel_simple: macro_rel_simple {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_release>,
                <&kp LEFT_COMMAND>,
                <&macro_tap>,
                <&to 0>;

            label = "MACRO_REL_SIMPLE";
        };

        hyphen_space: hyphen_space {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp MINUS &kp SPACE>;
            label = "HYPHEN_SPACE";
        };

        enye_lowercase: enye_lowercase {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N) &kp N>;
            label = "ENYE_LOWERCASE";
        };

        enye_uppercase: enye_uppercase {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LA(N)>,
                <&macro_press>,
                <&kp LEFT_SHIFT>,
                <&macro_tap>,
                <&kp N>,
                <&macro_release>,
                <&kp LEFT_SHIFT>;

            label = "ENYE_UPPERCASE";
        };

        macro_glhf: glhf {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp ENTER>,
                <&macro_wait_time 250>,
                <&kp G &kp L &kp H &kp F>,
                <&macro_wait_time 150>,
                <&kp RET>;

            label = "GLHF";
        };
    };

    combos {
        compatible = "zmk,combos";

        combo_esc {
            bindings = <&kp ESCAPE>;
            key-positions = <3 2>;
            layers = <0 4>;
            require-prior-idle-ms = <150>;
        };

        davinci_ret {
            bindings = <&kp RET>;
            key-positions = <12 13>;
            layers = <4>;
        };

        combo_backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <12 13>;
            layers = <0>;
            require-prior-idle-ms = <150>;
        };

        combo_copy {
            bindings = <&kp LG(C)>;
            key-positions = <23 22>;
            layers = <0>;
            require-prior-idle-ms = <150>;
        };

        combo_paste {
            bindings = <&kp LG(V)>;
            key-positions = <24 23>;
            layers = <0>;
            require-prior-idle-ms = <150>;
        };

        tabber {
            bindings = <&macro_to_cmd>;
            key-positions = <12 13 11>;
            layers = <0 7>;
            require-prior-idle-ms = <400>;
        };

        combo_finder {
            bindings = <&kp LG(LA(SPACE))>;
            key-positions = <20 21>;
            layers = <0>;
        };

        combo_obsidian {
            bindings = <&kp LG(LC(LA(O)))>;
            key-positions = <0 1>;
            layers = <0>;
            require-prior-idle-ms = <400>;
        };

        combo_claude {
            bindings = <&kp LG(LC(LA(LS(C))))>;
            key-positions = <1 2>;
            layers = <0>;
            require-prior-idle-ms = <150>;
        };

        combo_system {
            bindings = <&to 3>;
            key-positions = <3 4>;
            require-prior-idle-ms = <400>;
            layers = <0>;
        };

        combo_releaseme {
            bindings = <&macro_rel_simple>;
            key-positions = <0 14>;
        };

        combo_to_layer8 {
            bindings = <&to 8>;
            key-positions = <12 13>;
            layers = <7>;
            require-prior-idle-ms = <150>;
        };

        combo_to_layer7 {
            bindings = <&to 7>;
            key-positions = <12 13>;
            require-prior-idle-ms = <150>;
            layers = <8>;
        };

        quick_hyphen {
            bindings = <&kp MINUS>;
            key-positions = <29 28>;
            require-prior-idle-ms = <150>;
            layers = <0>;
        };

        enye_lower {
            bindings = <&enye_lowercase>;
            key-positions = <25 26>;
            require-prior-idle-ms = <200>;
            layers = <0>;
        };

        enye_upper {
            bindings = <&enye_uppercase>;
            key-positions = <25 26 27>;
            require-prior-idle-ms = <150>;
            layers = <0>;
        };

        tr_combo_inf {
            bindings = <&kp GRAVE>;
            key-positions = <0 1>;
            layers = <7 8>;
        };

        tr_combo_alltank {
            bindings = <&kp SLASH>;
            key-positions = <2 1>;
            layers = <7 8>;
        };

        tr_combo_all {
            bindings = <&kp GRAVE>;
            key-positions = <20 21>;
            layers = <7 8>;
        };

        tr_combo_bs {
            bindings = <&kp BACKSPACE>;
            key-positions = <22 23>;
            layers = <7 8>;
        };

        fkeys {
            bindings = <&to 9>;
            key-positions = <3 4>;
            layers = <7 8>;
        };

        combo_glhf {
            bindings = <&macro_glhf>;
            key-positions = <0 4>;
            layers = <7>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // Base Layer: QWERTY with home-row mods and layer-tap keys

        base {
            bindings = <
&trans  &mt F10 Q  &mt_300 LG(LS(NUMBER_3)) W  &mt_300 LG(LS(NUMBER_4)) E  &mt_300 LG(LC(LS(NUMBER_4))) R  &kp T                     &kp Y                        &kp U                  &slowlayer 7 I   &slowlayer 4 O  &slowlayer 6 P          &trans
&trans  &lt 1 A    &mt LEFT_CONTROL S          &mt LEFT_ALT D              &kp F                           &kp G                     &kp H                        &kp J                  &kp K            &kp L           &mt LA(E) SINGLE_QUOTE  &trans
&trans  &lt 2 Z    &kp X                       &kp C                       &kp V                           &mt CAPSLOCK B            &kp N                        &kp M                  &mt COLON COMMA  &mt SLASH DOT   &td_excla_minus         &trans
                                               &kp SPACE                   &mt LEFT_SHIFT LA(BACKSPACE)    &mt LEFT_COMMAND ENTER    &mt RIGHT_COMMAND BACKSPACE  &mt RIGHT_SHIFT SPACE  &kp RG(SPACE)
            >;
        };

        navigation {
            bindings = <
&trans  &trans  &kp LA(LEFT)  &kp UP    &kp LA(RIGHT)  &kp LC(RIGHT_ARROW)    &kp MINUS         &kp N7                    &kp N8  &kp N9  &kp FSLH   &trans
&trans  &trans  &kp LEFT      &kp DOWN  &kp RIGHT      &kp LC(LEFT_ARROW)     &kp LS(ASTERISK)  &mt RIGHT_SHIFT NUMBER_4  &kp N5  &kp N6  &kp PLUS   &trans
&trans  &trans  &kp LG(LEFT)  &trans    &kp LG(RIGHT)  &kp TAB                &kp DOT           &kp N1                    &kp N2  &kp N3  &kp EQUAL  &trans
                              &trans    &trans         &trans                 &trans            &trans                    &kp N0
            >;
        };

        symbols {
            bindings = <
&trans  &none  &none      &none          &none          &none     &kp LEFT_BRACE   &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans
&trans  &none  &kp GRAVE  &kp SEMICOLON  &kp BACKSLASH  &none     &kp RIGHT_BRACE  &kp DOLLAR     &kp PERCENT   &kp CARET             &kp PIPE               &trans
&trans  &none  &none      &none          &none          &none     &kp LBKT         &kp RBKT       &kp AT_SIGN   &kp HASH              &kp LS(LA(MINUS))      &trans
                          &trans         &trans         &trans    &trans           &trans         &trans
            >;
        };

        system {
            bindings = <
&none  &kp C_PLAY_PAUSE  &next_prev   &kp K_MUTE  &kp C_VOLUME_DOWN     &kp C_VOLUME_UP         &kp C_PLAY_PAUSE  &next_prev  &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp C_MUTE  &none
&none  &ale_email        &pewu_email  &none       &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC    &none             &none       &none              &none            &none       &none
&none  &none             &none        &none       &none                 &none                   &none             &none       &none              &none            &none       &none
                                      &none       &none                 &to 0                   &to 0             &none       &none
            >;
        };

        davinci {
            bindings = <
&trans  &kp Q   &trans  &kp UP_ARROW       &kp DOWN_ARROW   &trans                    &trans  &trans  &trans  &slowlayer 0 O  &trans  &trans
&trans  &trans  &trans  &trans             &trans           &trans                    &trans  &trans  &trans  &trans          &trans  &trans
&trans  &trans  &trans  &trans             &mt LS(LG(V)) V  &trans                    &trans  &trans  &trans  &trans          &trans  &trans
                        &kp LS(BACKSPACE)  &kp LS(L)        &mt LEFT_COMMAND SPACE    &trans  &trans  &trans
            >;
        };

        tabber {
            bindings = <
&trans  &kp Q  &none        &none        &none    &none          &none  &none  &none  &none  &none  &none
&none   &none  &kp LS(TAB)  &kp LS(TAB)  &kp TAB  &none          &none  &none  &none  &none  &none  &none
&none   &none  &none        &none        &none    &none          &none  &none  &none  &none  &none  &none
                            &none        &none    &command_up    &none  &none  &none
            >;
        };

        bluetooth {
            bindings = <
&trans  &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &bt BT_PRV  &bt BT_NXT  &trans  &trans  &to 0   &trans
&trans  &bt BT_CLR    &bt BT_CLR_ALL  &trans        &trans        &trans          &trans      &trans      &trans  &trans  &trans  &trans
&trans  &trans        &trans          &trans        &trans        &trans          &trans      &trans      &trans  &trans  &trans  &trans
                                      &trans        &trans        &trans          &trans      &trans      &trans
            >;
        };

        GAMER {
            bindings = <
&trans  &kp Q  &kp W  &kp E         &kp R           &kp T               &trans  &trans  &to 0   &trans  &trans  &trans
&trans  &kp A  &kp S  &kp D         &kp F           &kp G               &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp Z  &kp X  &kp C         &kp V           &kp LEFT_CONTROL    &trans  &trans  &trans  &trans  &trans  &trans
                      &kp LEFT_ALT  &kp LEFT_SHIFT  &kp LEFT_COMMAND    &trans  &trans  &trans
            >;
        };

        GAMER_NUM {
            bindings = <
&trans  &kp N1  &kp N2  &kp N3  &kp N4          &kp N5              &trans  &trans  &to 0   &trans  &trans  &trans
&trans  &kp A   &kp N6  &kp N7  &kp N8          &kp N9              &trans  &trans  &trans  &trans  &trans  &trans
&trans  &to 7   &none   &none   &none           &kp N0              &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &kp LEFT_SHIFT  &kp LEFT_COMMAND    &trans  &trans  &trans
            >;
        };

        f_keys {
            bindings = <
&none  &kp F1  &kp F2  &kp F3            &kp F4        &kp F5              &none  &none  &none  &none  &none  &none
&none  &kp F6  &kp F7  &kp F8            &kp F9        &kp F10             &none  &none  &none  &none  &none  &none
&none  &to 7   &none   &none             &kp F11       &kp F12             &none  &none  &none  &none  &none  &none
                       &kp LEFT_CONTROL  &kp LEFT_ALT  &kp LEFT_COMMAND    &none  &none  &none
            >;
        };
    };
};
